<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar: [Home] [Back] [Forward] ... [Power] ... [Print] [Menu] -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="#1565C0"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="홈"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="뒤로"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="앞으로"
            android:padding="10dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Schedule time display (center area) -->
        <TextView
            android:id="@+id/txtSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:visibility="gone"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <!-- Power Off button (center area) -->
        <ImageButton
            android:id="@+id/btnPower"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_power"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="전원 끄기"
            android:padding="10dp"
            android:visibility="gone" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnPrint"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_print"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="인쇄"
            android:padding="10dp"
            android:enabled="false"
            android:alpha="0.3" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="설정"
            android:padding="10dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:visibility="gone" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
